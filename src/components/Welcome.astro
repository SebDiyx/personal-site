---

<HorizontalPager>
  <div slot="overlay" class="site-header">
    <div class="site-header-inner">
      <div class="brand">{name}</div>
      <nav>
        <a class="nav-a" href="#home">Home</a>
        <a class="nav-a" href="#about">About</a>
        <a class="nav-a" href="#projects">Projects</a>
        <a class="nav-a" href="#experience">Experience</a>
        <a class="nav-a" href="#skills">Skills</a>
        <a class="nav-a" href="#contact">Contact</a>
      </nav>
    </div>
  </div>

  <section id="home" class="slide bg-white">
    <div class="container-w h-full grid grid-cols-1 lg:grid-cols-[1fr,0.5fr] gap-12 items-center">
      <div>
        <h1 class="mb-4">{title}</h1>
        <p class="hero-blurb mb-6 max-w-2xl">{summary}</p>
        <div class="flex flex-wrap gap-2 mb-6">
          <span class="pill">{location}</span>
          <span class="pill pill-accent">Open to consulting</span>
          <span class="pill pill-accent">Available for hire</span>
        </div>
        <div class="hero-actions">
          <a class="btn" href="#contact">Get in touch</a>
          <a class="btn btn-secondary" href="/resume.pdf">Download resume</a>
        </div>
      </div>
      <div class="card card-surface hidden lg:block">
        <h3 class="mb-4">Core Technologies</h3>
        <div class="flex flex-wrap gap-2 mb-4">
          {skillsPrimary.map((s) => <span class="pill pill-accent">{s}</span>)}
        </div>
        <div class="text-sm text-textSecondary">
          Architecture grounded in business value, clean TypeScript, and DevOps that keeps teams moving.
        </div>
      </div>
    </div>
  </section>

  <section id="about" class="slide">
    <div class="container-w h-full flex items-center">
      <div class="grid-2 w-full">
        <div class="card card-inline">
          <div class="icon-circle">üë®‚Äçüíª</div>
          <div>
            <h2 class="mb-4">About</h2>
            <p class="mb-4">I'm {name}, a builder at heart who loves turning ambiguous problems into delightful, scalable software. I lead with clarity, ship with care, and mentor with empathy.</p>
            <div class="flex flex-wrap gap-2">
              <span class="pill">Craft</span>
              <span class="pill">Simplicity</span>
              <span class="pill">Performance</span>
            </div>
          </div>
        </div>
        <div class="card">
          <h3 class="mb-4">Core Principles</h3>
          <ul class="space-y-2 text-sm">
            <li>‚Ä¢ Outcomes over output</li>
            <li>‚Ä¢ APIs as contracts</li>
            <li>‚Ä¢ Fast feedback wins</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section id="projects" class="slide">
    <div class="container-w h-full flex flex-col justify-center">
      <h2 class="mb-8">Selected Projects</h2>
      <div class="grid-3">
        {projects.map((p, i) => (
          <a href={p.link} class="card no-underline">
            <div class="icon-circle mb-4">{i === 0 ? "üõí" : i === 1 ? "üìä" : "üé®"}</div>
            <h3 class="mb-3">{p.name}</h3>
            <p class="text-textSecondary text-sm mb-4 leading-relaxed">{p.blurb}</p>
            <div class="flex flex-wrap gap-1">
              {p.highlights.map((h) => <span class="pill text-xs">{h}</span>)}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section id="experience" class="slide">
    <div class="container-w h-full flex flex-col justify-center">
      <h2 class="mb-8">Experience</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {experience.map((e) => (
          <div class="card card-inline">
            <div class="icon-circle">üíº</div>
            <div class="flex-1">
              <h3 class="mb-1">{e.role}</h3>
              <p class="text-textSecondary text-sm font-medium mb-3">{e.org} ‚Ä¢ {e.period}</p>
              <ul class="space-y-1 text-sm">
                {e.bullets.map((b) => (
                  <li class="flex items-start text-textSecondary leading-relaxed">
                    <span class="text-accent mr-2 mt-1 text-xs">‚Ä¢</span>
                    {b}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="skills" class="slide">
    <div class="container-w h-full flex flex-col justify-center">
      <h2 class="mb-8">Skills & Technologies</h2>
      <div class="grid-2">
        <div class="card">
          <h3 class="mb-4">Primary Technologies</h3>
          <div class="flex flex-wrap gap-2">
            {skillsPrimary.map((s) => <span class="pill pill-accent">{s}</span>)}
          </div>
        </div>
        <div class="card">
          <h3 class="mb-4">Infrastructure & Tools</h3>
          <div class="flex flex-wrap gap-2">
            {skillsSecondary.map((s) => <span class="pill">{s}</span>)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="slide">
    <div class="container-w h-full flex items-center justify-center">
      <div class="card card-accent text-center w-full max-w-2xl">
        <h3 class="text-white mb-4">Ready to work together?</h3>
        <p class="text-white/90 mb-6">I'm always excited to discuss new opportunities and interesting projects.</p>
        <div class="flex flex-wrap gap-6 justify-center items-center">
          <a href={`mailto:${email}`} class="text-white hover:text-white/80 transition-colors">{email}</a>
          <a href="#" class="text-white hover:text-white/80 transition-colors">LinkedIn</a>
          <a href="#" class="text-white hover:text-white/80 transition-colors">GitHub</a>
        </div>
      </div>
    </div>
  </section>

  <section aria-hidden="true" class="slide bg-surface">

---
import "../styles/tailwind.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#FF6B6B" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
            rel="stylesheet"
        />
        <title>Full‑Stack Web Developer • Technical Lead</title>
        <meta
            name="description"
            content="Portfolio and resume of a full‑stack web developer and technical lead. Projects, experience, skills, and contact information."
        />
        <meta
            name="keywords"
            content="Full‑Stack Developer, Technical Lead, TypeScript, React, Node.js, AWS, Portfolio"
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:title"
            content="Full‑Stack Web Developer • Technical Lead"
        />
        <meta
            property="og:description"
            content="Projects, experience, and contact details."
        />
    </head>
    <body class="min-h-screen">
        <slot />
    </body>
</html>
<!-- Tailwind handles all styling; removed legacy CSS -->
